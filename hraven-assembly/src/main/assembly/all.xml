  <!--This 'all' id is not appended to the produced bundle because we do this:
    http://maven.apache.org/plugins/maven-assembly-plugin/faq.html#required-classifiers
  -->
  <id>all</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <!-- Include top level text files -->
    <fileSet>
      <directory>${project.basedir}/..</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <!-- Include top level conf directory -->
    <fileSet>
      <directory>${project.basedir}/../web</directory>
      <outputDirectory>web</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Include top level conf directory -->
    <fileSet>
      <directory>${project.basedir}/../conf</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Include the top level bin directory -->
    <fileSet>
      <directory>${project.basedir}/../bin/standalone</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Include the hraven-core scripts -->
    <fileSet>
      <directory>${project.basedir}/../hraven-core/src/main/scripts</directory>
      <outputDirectory>scripts</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <binaries>
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <scope>runtime</scope>
            <fileMode>0644</fileMode>
            <directoryMode>0644</directoryMode>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
